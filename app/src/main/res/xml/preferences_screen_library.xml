<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:icon="@drawable/ic_delete_24dp"
        app:title="@string/trash_music_title"
        app:summary="@string/trash_music_summary"
        app:defaultValue="false"
        app:layout="@layout/list_item_view"
        app:widgetLayout="@layout/preference_switch"
        app:key="trash_music_files"/>

    <SwitchPreferenceCompat
        app:iconSpaceReserved="true"
        app:title="@string/ignore_articles_when_sorting_title"
        app:summary="@string/ignore_articles_when_sorting_summary"
        app:defaultValue="false"
        app:layout="@layout/list_item_view"
        app:widgetLayout="@layout/preference_switch"
        app:key="ignore_articles_when_sorting"/>

    <PreferenceCategory
        app:title="@string/playlists_label"
        app:layout="@layout/preference_category_title">

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_history_24dp"
            app:title="@string/enable_history_title"
            app:summary="@string/enable_history_summary"
            app:defaultValue="true"
            app:layout="@layout/list_item_view"
            app:widgetLayout="@layout/preference_switch"
            app:key="enable_history_playlist"/>

        <ListPreference
            app:iconSpaceReserved="true"
            app:title="@string/history_interval_title"
            app:entries="@array/pref_playlists_cutoff_entries"
            app:entryValues="@array/pref_playlists_cutoff_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="this_month"
            app:dependency="enable_history_playlist"
            app:layout="@layout/list_item_view"
            app:key="history_interval"/>

        <ListPreference
            app:iconSpaceReserved="true"
            app:title="@string/last_added_interval_title"
            app:entries="@array/pref_playlists_cutoff_entries"
            app:entryValues="@array/pref_playlists_cutoff_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="this_month"
            app:layout="@layout/list_item_view"
            app:key="last_added_interval"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/folders_label"
        app:layout="@layout/preference_category_title">

        <MultiSelectListPreference
            app:icon="@drawable/ic_folder_24dp"
            app:title="@string/recursive_folder_actions_title"
            app:summary="@string/recursive_folder_actions_summary"
            app:entries="@array/pref_recursive_folder_action_entries"
            app:entryValues="@array/pref_recursive_folder_action_values"
            app:layout="@layout/list_item_view"
            app:key="recursive_folder_actions"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/exclusion_header"
        app:layout="@layout/preference_category_title">

        <com.mardous.booming.ui.component.preferences.SwitchWithButtonPreference
            app:icon="@drawable/ic_whitelist_24dp"
            app:title="@string/whitelist_title"
            app:summary="@string/whitelist_summary"
            app:defaultValue="true"
            app:layout="@layout/list_item_view_with_button"
            app:widgetLayout="@layout/preference_switch"
            app:key="whitelist_enabled"/>

        <com.mardous.booming.ui.component.preferences.SwitchWithButtonPreference
            app:icon="@drawable/ic_blacklist_24dp"
            app:title="@string/blacklist_title"
            app:summary="@string/blacklist_summary"
            app:defaultValue="true"
            app:layout="@layout/list_item_view_with_button"
            app:widgetLayout="@layout/preference_switch"
            app:key="blacklist_enabled"/>

        <SeekBarPreference
            app:iconSpaceReserved="true"
            app:title="@string/min_song_duration_title"
            app:summary="@string/min_song_duration_summary"
            android:max="120"
            app:min="0"
            app:defaultValue="60"
            app:showSeekBarValue="true"
            app:layout="@layout/list_item_view_bottom_widget"
            app:widgetLayout="@layout/preference_seekbar"
            app:key="minimum_song_duration"/>

        <SeekBarPreference
            app:iconSpaceReserved="true"
            app:title="@string/artist_min_songs_title"
            app:summary="@string/artist_min_songs_summary"
            android:max="8"
            app:min="1"
            app:defaultValue="1"
            app:showSeekBarValue="true"
            app:layout="@layout/list_item_view_bottom_widget"
            app:widgetLayout="@layout/preference_seekbar"
            app:key="artist_minimum_songs"/>

        <SeekBarPreference
            app:iconSpaceReserved="true"
            app:title="@string/album_min_songs_title"
            app:summary="@string/album_min_songs_summary"
            android:max="8"
            app:min="1"
            app:defaultValue="1"
            app:showSeekBarValue="true"
            app:layout="@layout/list_item_view_bottom_widget"
            app:widgetLayout="@layout/preference_seekbar"
            app:key="album_minimum_songs"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/metadata_title"
        app:layout="@layout/preference_category_title">

        <ListPreference
            app:iconSpaceReserved="true"
            app:title="@string/auto_download_metadata_title"
            app:entries="@array/pref_auto_download_metadata_entries"
            app:entryValues="@array/pref_auto_download_metadata_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="@string/default_metadata_policy"
            app:layout="@layout/list_item_view"
            app:key="auto_download_metadata_policy"/>

        <SwitchPreferenceCompat
            app:iconSpaceReserved="true"
            app:title="@string/online_artist_images_title"
            app:summary="@string/online_artist_images_summary"
            app:defaultValue="@bool/default_images_download"
            app:icon="@drawable/ic_artist_24dp"
            app:layout="@layout/list_item_view"
            app:widgetLayout="@layout/preference_switch"
            app:key="allow_online_artist_images"/>

        <SwitchPreferenceCompat
            app:iconSpaceReserved="true"
            app:title="@string/online_album_covers_title"
            app:summary="@string/online_album_covers_summary"
            app:defaultValue="@bool/default_images_download"
            app:icon="@drawable/ic_album_24dp"
            app:layout="@layout/list_item_view"
            app:widgetLayout="@layout/preference_switch"
            app:key="allow_online_album_covers"/>

        <ListPreference
            app:iconSpaceReserved="true"
            app:title="@string/preferred_image_size_title"
            app:entries="@array/pref_image_size_entries"
            app:entryValues="@array/pref_image_size_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="medium"
            app:layout="@layout/list_item_view"
            app:key="preferred_image_size"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/advanced_title"
        app:layout="@layout/preference_category_title">

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_image_24dp"
            app:title="@string/ignore_media_store_album_covers_title"
            app:summary="@string/ignore_media_store_album_covers_summary"
            app:defaultValue="false"
            app:layout="@layout/list_item_view"
            app:widgetLayout="@layout/preference_switch"
            app:key="ignore_media_store"/>

        <SwitchPreferenceCompat
            app:iconSpaceReserved="true"
            app:title="@string/use_folder_album_cover_title"
            app:summary="@string/use_folder_album_cover_summary"
            app:defaultValue="false"
            app:layout="@layout/list_item_view"
            app:widgetLayout="@layout/preference_switch"
            app:key="use_folder_art"/>

    </PreferenceCategory>

</PreferenceScreen>
