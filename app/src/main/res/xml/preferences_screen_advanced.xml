<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:icon="@drawable/ic_language_24dp"
        app:title="@string/app_language_title"
        app:entries="@array/pref_language_names"
        app:entryValues="@array/pref_language_codes"
        app:negativeButtonText="@null"
        app:positiveButtonText="@null"
        app:useSimpleSummaryProvider="true"
        app:defaultValue="auto"
        app:layout="@layout/list_item_view"
        app:key="language_name"/>

    <SwitchPreferenceCompat
        app:title="@string/rotation_lock_title"
        app:summary="@string/rotation_lock_summary"
        app:defaultValue="false"
        app:layout="@layout/list_item_view"
        app:widgetLayout="@layout/preference_switch"
        app:key="enable_rotation_lock"/>

    <PreferenceCategory
        app:title="@string/notification_title"
        app:layout="@layout/preference_category_title">

        <ListPreference
            app:iconSpaceReserved="true"
            app:title="@string/extra_line_of_text_title"
            app:entries="@array/pref_notification_extra_text_line_entries"
            app:entryValues="@array/pref_notification_extra_text_line_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="artist"
            app:layout="@layout/list_item_view"
            app:key="notification_extra_text_line" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/backup_restore_header"
        app:layout="@layout/preference_category_title">

        <Preference
            app:title="@string/backup_data_title"
            app:summary="@string/backup_app_data_summary"
            app:persistent="false"
            app:layout="@layout/list_item_view"
            app:key="backup_data"/>

        <Preference
            app:title="@string/restore_backup_title"
            app:summary="@string/restore_backup_summary"
            app:persistent="false"
            app:layout="@layout/list_item_view"
            app:key="restore_data"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/update_title"
        app:layout="@layout/preference_category_title"
        app:isPreferenceVisible="@bool/enable_app_update">

        <ListPreference
            app:layout="@layout/list_item_view"
            app:title="@string/auto_update_title"
            app:entries="@array/pref_update_mode_titles"
            app:entryValues="@array/pref_update_mode_values"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="weekly"
            app:isPreferenceVisible="@bool/enable_app_update"
            app:key="update_search_mode"/>

        <SwitchPreferenceCompat
            app:title="@string/receive_experimental_updates_title"
            app:summary="@string/receive_experimental_updates_summary"
            app:defaultValue="false"
            app:layout="@layout/list_item_view"
            app:widgetLayout="@layout/preference_switch"
            app:isPreferenceVisible="@bool/enable_app_update"
            app:key="experimental_updates"/>

        <SwitchPreferenceCompat
            app:title="@string/only_wifi_title"
            app:summary="@string/only_wifi_summary"
            app:defaultValue="false"
            app:layout="@layout/list_item_view"
            app:widgetLayout="@layout/preference_switch"
            app:isPreferenceVisible="@bool/enable_app_update"
            app:key="update_only_wifi"/>

        <com.mardous.booming.ui.component.preferences.ProgressIndicatorPreference
            app:title="@string/search_for_update_title"
            app:persistent="false"
            app:layout="@layout/list_item_view"
            app:widgetLayout="@layout/preference_progressbar"
            app:isPreferenceVisible="@bool/enable_app_update"
            app:key="search_for_update"/>

    </PreferenceCategory>

</PreferenceScreen>