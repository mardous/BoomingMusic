<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.Booming" parent="Theme.Material3Expressive.Dark.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="popupMenuBackground">@drawable/popupmenu_background</item>
        <item name="popupMenuStyle">@style/MaterialPopupMenuStyle</item>
        <item name="popupWindowStyle">@style/MaterialPopupMenuStyle</item>
        <item name="materialButtonStyle">@style/Widget.Booming.Expressive.Button</item>
        <item name="materialButtonTonalStyle">@style/Widget.Booming.Expressive.Button.Tonal</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_24dp</item>
        <item name="rectSelector">@drawable/rect_selector</item>
