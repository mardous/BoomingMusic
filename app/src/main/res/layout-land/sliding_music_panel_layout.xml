<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.navigationrail.NavigationRailView
            android:id="@+id/navigationView"
            style="?navigationRailStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:itemHorizontalTranslationEnabled="false"
            app:menu="@menu/menu_bottom_navigation"
            tools:viewBindingType="com.google.android.material.navigation.NavigationBarView" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
            app:defaultNavHost="true"
            tools:layout="@layout/fragment_home" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sheet_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/mini_player_margin_horizontal"
        android:layout_marginEnd="@dimen/mini_player_margin_horizontal"
        android:layout_marginTop="@dimen/mini_player_margin"
        android:layout_marginBottom="@dimen/mini_player_margin_bottom"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        android:background="@android:color/transparent"
        app:backgroundTint="@android:color/transparent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <FrameLayout
            android:id="@+id/sheet_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?colorSurface"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:enableEdgeToEdge="true"
            app:gestureInsetBottomIgnored="true">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/player_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?colorSurface"/>

            <fragment
                android:id="@+id/mini_player_container"
                android:name="com.mardous.booming.ui.screen.other.MiniPlayerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_mini_player"/>

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>